<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dao.FavouriteGoodsDao">
    <resultMap id="FavouriteResult" type="com.pojo.Favorites">
        <id property="favouriteId" column="favourite_id"/>
        <result property="userId" column="user_id"/>
        <result property="goodsId" column="goods_id"/>
        <result property="storeId" column="store_id"/>
        <association property="goods" javaType="com.pojo.Goods">
            <id property="goodsId" column="goods_id"/>
            <result property="goodsName" column="goods_name"/>
            <result property="goodsPrice" column="goods_price"/>
            <result property="goodsDesc" column="goods_desc"/>
            <result property="goodsType" column="goods_type"/>
            <result property="goodsImg" column="goods_img"/>
            <result property="goodsStock" column="goods_stock"/>
            <result property="goodsStatus" column="goods_status"/>
            <result property="storeId" column="store_id"/>
        </association>
        <association property="store" javaType="com.pojo.Store">
            <id property="storeId" column="store_id"/>
            <result property="storeName" column="store_name"/>
        </association>
    </resultMap>
    <select id="getFavouriteGoods" resultMap="FavouriteResult" parameterType="int">
        select * from favorites where user_id =#{userId} and goods_id is not null
    </select>

    <select id="getFavouriteStore" resultMap="FavouriteResult" parameterType="int">
        select * from favorites where user_id =#{userId} and store_id is not null
    </select>

    <insert id="addFavouriteGoods" parameterType="com.pojo.Favorites">
        insert into favorites(user_id, goods_id)  values (#{userId},#{goodsId})
    </insert>

    <insert id="addFavouriteStore" parameterType="com.pojo.Favorites">
        insert into favorites(user_id, store_id)  values (#{userId},#{storeId})
    </insert>

    <delete id="deleteFavourite" parameterType="int">
        delete from favourites where favourites_id=#{favouriteId}
    </delete>
</mapper>